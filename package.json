{
  "name": "revsw-stats-api",
  "author": "Rev Software, Inc",
  "version": "1.0.0",
  "description": "Rev SDK Stats API Service",
  "keywords": [
    "api",
    "revsw"
  ],
  "scripts": {
    "start": "nodejs bin/revsw-stats-api.js",
    "server": "node bin/revsw-stats-api.js",
    "silent": "NODE_ENV='silent' node bin/revsw-stats-api.js",
    "lint": "jshint -c .jshintrc lib/*.js bin/*.js; jshint -c config/.jshintrc config/default.json config/production.json config/qa.json",
    "test": "mocha test",
    "test-qa": "NODE_ENV=qa mocha test/test-overall.js",
    "test-local": "NODE_ENV=local-api mocha test/test-overall.js"
  },
  "dependencies": {
    "bluebird": "^3.0.5",
    "config": "^1.16.0",
    "elasticsearch": "^8.2.0",
    "forever-monitor": "^1.7.0",
    "jgeoip": "^0.1.4",
    "lodash": "^3.10.1",
    "minimum-tls-version": "0.0.3",
    "mongodb": "^2.0.49",
    "redis": "^2.4.1"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "should": "^7.1.1",
    "should-http": "0.0.4",
    "supertest": "^1.1.0",
    "supertest-as-promised": "^2.0.2",
    "request": "^2.67.0",
    "gulp": "^3.9.0",
    "gulp-jshint": "^2.0.0",
    "gulp-mocha": "^2.2.0",
    "gulp-util": "^3.0.7",
    "yargs": "^3.31.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.1.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    }
  }
}
